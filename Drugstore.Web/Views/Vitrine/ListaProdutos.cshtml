@model Drugstore.Web.Models.ProdutosViewModel
@using Drugstore.Web.Helpers

<nav class="align-content-center">
    <ul class="pagination">
        @Html.PageLinks(Model.Paginacao, x => Url.Action("ListaProdutos", new { pagina = x, categoria = Model.CategoriaAtual }))
    </ul>
</nav>
@foreach (var p in Model.Produtos)
{
    @Html.Partial("ProdutoDetalhes", p)
}
