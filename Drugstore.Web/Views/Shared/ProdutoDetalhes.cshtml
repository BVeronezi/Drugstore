@model Drugstore.Dominio.Entidades.Produto

<div class="well">
    <h5><strong>@Model.Nome</strong>  </h5>
    <h5><span class="pull-right label label-primary">@Model.Preco.ToString("c")</span></h5>

    @using (Html.BeginForm("Adicionar", "Carrinho"))
    {
        <div class="pull-right">
            @Html.HiddenFor(x => x.ProdutoId)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-success" value="Comprar"/>
        </div>
    }

    <h5>  <span class="lead">@Model.Descricao</span></h5>
</div>
