@model Drugstore.Web.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<meta name=viewport content="user-scalable=no, width=device-width, initial-scale=1.0" />
<meta name=apple-mobile-web-app-capable content=yes />
@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensagem"]
    </div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <main>
        <div class="main-container">
            <div id="ac-page">
                <div data-reactroot="">
                    <section class="container container--white">
                        <div class="account-header">
                            <h2 class="auth-title">Já tem cadastro?</h2>
                        </div>
                        <fieldset class="form__fieldset">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.UrlRetorno)
                            <div class="registered-users">
                                <div class="input-box">
                                    <div class="account-login">
                                        <div class="email-container">
                                            <div class="input-box">
                                                @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "name" })
                                                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", placeholder = "Seu Login" } })
                                                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                                            </div>
                                            <span id="situacao"></span>
                                        </div>
                                        <div class="pass-container">
                                            @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "name" })
                                            @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", placeholder = "Sua Senha" } })
                                            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form__actions__half"><a href="#" class="account-forgot">Esqueceu sua senha?</a></div>
                            <div class="col-6 right">
                                <input type="submit" value="Acessar Conta" class="btn btn-primary btn--full" />
                            </div>
                            <hr>
                            <div class="register">
                                <p>Você é novo aqui?</p>
                                <a href="@Url.Action("Cadastrar", "Autenticacao")" title="Criar Conta" class="create-count-button">
                                    Cadastre-se agora!
                                </a>
                            </div>
                        </fieldset>
                    </section>
                </div>
            </div>
        </div>


    </main>

}
@section scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
